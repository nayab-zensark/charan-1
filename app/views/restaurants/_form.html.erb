<%= form_with model: @restaurant do |form| %>
    <div>
      <%= form.label :restaurant_name %><br>
      <%= form.text_field :restaurant_name %><br>
      <% @restaurant.errors.full_messages_for(:restaurant_name).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.label :address %><br>
      <%= form.text_area :address %><br>
      <% @restaurant.errors.full_messages_for(:address).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
    <%= form.label :restaurant_type %><br />
    <%= form.select :restaurant_type, ['vegetarian', 'non-vegetarian']%>
    </div>
    <div>
      <%= form.submit %>
    </div>
<% end %>